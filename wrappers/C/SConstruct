## -*- python -*-

from   os.path   import realpath, join

env = Environment()

## ------------------------------------------------------------------------------------------------------
## build the test program for the C wrapper
## Feff libraries should have already been installed
env.Program('makepath', ['makepath.c', '/usr/local/lib/libfeffpath.a'],
            LIBS = ['onepath', 'feffgenfmt', 'feffcom', 'feffmath', 'feffpar', 'gfortran', 'm'])

## specify the static library, gcc will otherwise prefer the shared object

